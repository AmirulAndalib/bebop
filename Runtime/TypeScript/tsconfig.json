{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "dist",
        "newLine": "lf",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "node",
        "sourceRoot": "src",
        "sourceMap": true,
        "declaration": true,
    },
    "exclude": [
        "node_modules",
        "dist",
        ".npm"
    ],
    "include": ["src/**/*.ts"]
}
